<h2 class="text-xl font-bold mb-4">
  Repositories <span class="text-sm text-gray-600">(<%= repositories.size %> found)</span>
</h2>
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
  <% repositories.each do |repo| %>
    <div class="bg-white shadow-lg rounded-lg p-4 hover:shadow-xl transition-shadow">
      <div class="flex justify-between items-center">
        <h3 class="text-lg font-semibold">
          <%= link_to repo.name, repo.html_url, target: "_blank", class: "text-blue-500 hover:underline" %>
        </h3>
        <span class="<%= repo.private ? 'bg-red-500' : 'bg-green-500' %> text-white px-2 py-1 rounded-full text-xs">
          <%= repo.private ? 'Private' : 'Public' %>
        </span>
      </div>
      <p class="text-sm text-gray-600"><%= repo.description || "No description provided." %></p>
      <div class="text-sm mt-2">
        <span class="font-bold">Stars:</span> <%= repo.stargazers_count %>
        <span class="font-bold ml-4">Forks:</span> <%= repo.forks_count %>
      </div>
    </div>
  <% end %>
</div>
