<div class="max-w-6xl mx-auto px-4 py-8">
  <div class="bg-white shadow-lg rounded-lg p-6">
    <div class="flex justify-between items-center space-x-4 mb-4">
      <img src="<%= @organization.avatar_url %>" alt="<%= @organization.login %> logo" class="w-20 h-20 rounded-full">
      <div class="flex-grow">
        <div class="flex justify-between items-center">
          <div>
            <h1 class="text-2xl font-bold"><%= @organization.login %></h1>
            <a href="<%= @organization.html_url %>" class="text-blue-500 hover:underline">Visit on GitHub</a>
          </div>
          <%= link_to "Edit #{ @organization.login }", edit_github_organization_path(@organization), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
        </div>
      </div>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <div>
        <h2 class="text-lg font-semibold">Details</h2>
        <p><strong>Description:</strong> <%= @organization.description || "No description provided." %></p>
        <p><strong>Email:</strong> <%= @organization.email || "No email provided." %></p>
        <p><strong>Location:</strong> <%= @organization.location || "Not specified" %></p>
        <p><strong>Member since:</strong> <%= @organization.created_at.to_date %></p>
        <p><strong>Last Updated:</strong> <%= @organization.updated_at.to_date %></p>
      </div>
      <div>
        <h2 class="text-lg font-semibold">Statistics</h2>
        <p><strong>Public Repos:</strong> <%= @organization.public_repos %></p>
        <p><strong>Private Repos:</strong> <%= @organization.total_private_repos %></p>
        <p><strong>Collaborators:</strong> <%= @organization.collaborators %></p>
        <p><strong>Disk Usage:</strong> <%= @organization.disk_usage %> MB</p>
      </div>
      <div>
        <h2 class="text-lg font-semibold">Permissions & Features</h2>
        <p><strong>Default Repository Permission:</strong> <%= @organization.default_repository_permission %></p>
        <p><strong>Members Can Create Repos:</strong> <%= @organization.members_can_create_repositories ? "Yes" : "No" %></p>
        <p><strong>Two Factor Authentication:</strong> <%= @organization.two_factor_requirement_enabled ? "Required" : "Not required" %></p>
        <p><strong>Web Commit Signoff:</strong> <%= @organization.web_commit_signoff_required ? "Required" : "Not required" %></p>
      </div>
    </div>
  </div>
  <div class="mt-8">
    <%= render "shared/repositories", repositories: @repositories %>
  </div>
</div>

